# Servidor
PORT=3001
NODE_ENV=development

# Base de datos
# Reemplaza los placeholders con tus credenciales y el nombre de tu base de datos.
# Formato: postgresql://USER:PASSWORD@HOST:PORT/DATABASE_NAME
DATABASE_URL="postgresql://tu_usuario_db:tu_contraseña_db@localhost:5432/frioservice_db"

# JWT (JSON Web Token)
# ¡IMPORTANTE! Reemplaza esto con una cadena larga, aleatoria y secreta en tu archivo .env real.
JWT_SECRET="tu_super_secreto_jwt_aqui_debe_ser_largo_y_aleatorio"
JWT_EXPIRES_IN=7d

# URL del Frontend (para CORS)
# Asegúrate de que esta sea la URL donde se ejecuta tu aplicación frontend.
FRONTEND_URL=http://localhost:3000